<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lucaguzzon.about" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>About Luca Guzzon</name>
    <description>Luca Guzzon landing application</description>
    <author email="luca.guzzon@gmail.com" href="https://lucaguzzon.com/">lguzzon</author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <icon src="res/icon.png" />
    <platform name="ios">
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>To scan barcodes</string>
        </edit-config>
    </platform>
    <preference name="AppendUserAgent" value=" CordovaApp" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-app-launcher" spec="^0.4.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="~4.0.0" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~8.1.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
</widget>
